<div class="card">

    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> Subir una imagen
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="input-group"
                            aria-describedby="InputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">Elegir imagen</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="TÃ­tulo de la imagen" required>
            </div>
            <div class="form-group">
                <textarea name="description" rows="2" class="form-control" placeholder="DescripciÃ³n de la imagen"
                    required></textarea>
            </div>
            <div class="form-group">
                <input name="contact" rows="2" class="form-control" placeholder="whatsapp"
                    ></input>
            </div>

            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Subir imagen
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-primary text-white">
        <h3><i class="far fa-images"></i> Subidas recientemente</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="col-md-4">
                <a href="/images/{{uniqueId}}">
                    <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>